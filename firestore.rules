rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users — only the owner can read/write their own doc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Scans — anyone can read (public reports), only authenticated users can create
    // Updates are restricted to Cloud Functions via Admin SDK (bypasses rules)
    match /scans/{scanId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false; // only admin SDK
    }
  }
}
